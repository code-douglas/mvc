<div class="task-container">
  {{#if tasks.length}}
    <h1>Todas as tarefas: </h1>
    <ul class="task-list">
      {{#each tasks}}
        <li class="item">
          {{#if this.done}}
            <a href="/" class="title done">{{this.title}}</a>
          {{else}}
          <a href="/" class="title">{{this.title}}</a>
          {{/if}}
          <div class="actions">
            <form action="/tasks/updatestatus" method="post">
            <input type="hidden" name="id" value="{{this.id}}">
            <input type="hidden" name="done" value="{{this.done}}">
              <button type="submit">
                <i class="bi bi-check2"></i>
              </button>
            </form>
            <a href="/tasks/edit/{{this.id}}"><i class="bi bi-pencil-square"></i></a>
            <form action="/tasks/remove" method="post">
            <input type="hidden" name="id" value="{{this.id}}">
              <button type="submit">
                <i class="bi bi-trash-fill"></i>
              </button>
            </form>
          </div>
        </li>
      {{/each}}
    {{else}}
      <h1>Não há tarefas registradas.</h1>
    {{/if}}
    
  </ul>
</div>